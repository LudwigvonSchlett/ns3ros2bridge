#!/bin/bash

apt-get update && \
apt-get upgrade -y && \
apt-get install -y \
    wget \
    tar \
    bzip2 \
    gcc-10 \
    g++-10 \
    qtbase5-dev \
    build-essential \
    python3 \
    doxygen \
    valgrind \
    pkg-config && \
update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-10 100 && \
update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-10 100
